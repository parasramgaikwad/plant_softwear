<%-include('header.ejs')%>
  <style>
    .blinking-glow-button {
      font-size: 18px;
      font-weight: bold;
      padding: 5px;
      border: none;
      border-radius: 50%;
      color: white;
      background-color: #ff5722;
      text-transform: uppercase;
      cursor: pointer;
      box-shadow: 0 0 15px #ff5722;
      animation: glow 1.5s infinite, blink 1s infinite;
      position: absolute;
      transition: transform 0.2s;
      right: 5px;
      top: 5px;
    }

    .blinking-glow-button:hover {
      transform: scale(1.1);
    }

    @keyframes glow {
      0% {
        box-shadow: 0 0 15px #ff5722, 0 0 30px #ff5722, 0 0 45px #ff5722;
      }

      50% {
        box-shadow: 0 0 20px #ff9800, 0 0 40px #ff9800, 0 0 60px #ff9800;
      }

      100% {
        box-shadow: 0 0 15px #ff5722, 0 0 30px #ff5722, 0 0 45px #ff5722;
      }
    }

    @keyframes blink {

      0%,
      100% {
        opacity: 1;
      }

      50% {
        opacity: 0.5;
      }
    }
  </style>
  <div class="container">

    <div class="row my-5">
      <%if(asgin.length!=0){%>
        <div class="col-md-3 p-2">
          <div class="card card-body  py-3 w-100">
            <div class="row ">
              <a href="/driver/task">

                <div class="hstack gap-3">
                  <img src="/images/taskassign.png" height="70" width="auto">
                  <div class="vr"></div>
                  <div class=" text-center jusitfy-content-center">
                    <button class="blinking-glow-button"></button>
                    <h4>New Task Assign</h4>
                    <h3>1</h3>
                  </div>
                </div>
              </a>

            </div>
          </div>
        </div>
        <%}%>


          <div class="col-md-3 p-2">
            <div class="card card-body  py-3 w-100">
              <div class="row ">
                <a href="/driver/completed-task">

                  <div class="hstack gap-3">
                    <img src="/images/delivery-boy.png" height="60" width="auto">
                    <div class="vr"></div>
                    <div class=" text-center jusitfy-content-center">
                      <h4>Total tasks</h4>
                      <h3><%-ttl_task.ttl_task%></h3>
                    </div>
                  </div>
                </a>

              </div>
            </div>

          </div>










    </div>
  </div>

  <%-include('footer.ejs')%>