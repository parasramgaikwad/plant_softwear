<%-include('header.ejs')%>
<div class="container">
    <div class="row p-5">
        <div class="col-md-12 rounded p-4 bg-light">
          <h3>Requested Completed Orders</h3>
          <table class="display" id="example">
            <thead>
                <tr>
                <th>Customer</th>
                    <th>Product</th>
                    
                    <th>Cylenders</th>
                <th>Address</th>
                <th>Price</th>
                <th>Paid Amount</th>
                <th>Pending Amount</th>
                <th>Location Image</th>
            <th></th>
                </tr>

            </thead>
            <tbody>
                <%for(let i=0;i<data.length;i++){%>
                    <%if(data[i].comp_status=='requested'){%>
                        
                       
                    <tr>
                        <td>
                            <a href="/edit_cust/<%-data[i].customer_id%>">
                                <%-data[i].c_name%>

                            </a>
                  </td>
                        <td><%-data[i].p_name%></td>
                        <td><%-data[i].qty%></td>
                        <td><%-data[i].cust_add%></td>
                        <td>&#8377; <%-data[i].total%></td>
                        <td>&#8377; <%-data[i].paid_amount%></td>
                        <td>&#8377; <%-data[i].pending_amt%></td>
                        <td><a href="/images/<%-data[i].loc_img%>" target="_blank">

                            <i class="fa fa-image"></i>
                        </a>
                           </td>
                           <td>
                            <a href="/approve-request/<%-data[i].id%>" class="btn btn-success">Approve</a>
                           </td>
                    </tr>
                    <%}%>
                <%}%>
            </tbody>
          </table>
        </div>
    </div>
</div>

<%-include('footer.ejs')%>